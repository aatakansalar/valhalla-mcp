# Valhalla Configuration
# For local Docker: http://localhost:8002  
# For custom server: http://your-valhalla-server:8002
VALHALLA_BASE_URL=http://localhost:8002

# Logging (error level for clean Claude Desktop output)
LOG_LEVEL=error

# Optional: Redis for advanced caching
# REDIS_URL=redis://localhost:6379
# REDIS_PREFIX=valhalla-mcp:

# Development/Debugging
DEBUG=false

# Server Configuration
MCP_SERVER_NAME=valhalla-mcp-server
MCP_SERVER_VERSION=0.1.0 